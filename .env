# CEDEARs Manager - Development Environment

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3001
FRONTEND_PORT=3000

# Database Configuration
DB_PATH=./database/cedears.db

# API Keys (Development - using mock/free tiers)
YAHOO_FINANCE_API_KEY=
NEWS_API_KEY=
CLAUDE_API_KEY=

# BCRA UVA API (No key required - public endpoint)
BCRA_API_URL=https://api.bcra.gob.ar

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/combined.log

# Security (Development keys - change in production)
JWT_SECRET=dev_jwt_secret_12345_change_in_production
ENCRYPT_KEY=dev_encryption_key_32_chars_long

# Development Settings
DEBUG_MODE=true
ENABLE_CORS=true
MOCK_EXTERNAL_APIS=true

# Update Configuration
AUTO_UPDATE_ENABLED=false
UPDATE_CHECK_INTERVAL=86400000

# Notification Settings
ENABLE_NOTIFICATIONS=true
MAX_NOTIFICATIONS=100