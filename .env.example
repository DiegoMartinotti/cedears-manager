# CEDEARs Manager - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3001
FRONTEND_PORT=3000

# Database Configuration
DB_PATH=./database/cedears.db

# API Keys (Required for production)
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here
NEWS_API_KEY=your_news_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# BCRA UVA API (No key required - public endpoint)
BCRA_API_URL=https://api.bcra.gob.ar

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/combined.log

# Security
JWT_SECRET=your_jwt_secret_for_session_management
ENCRYPT_KEY=your_32_character_encryption_key

# Development Settings
DEBUG_MODE=true
ENABLE_CORS=true
MOCK_EXTERNAL_APIS=false

# Update Configuration
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=86400000

# Notification Settings
ENABLE_NOTIFICATIONS=true
MAX_NOTIFICATIONS=100